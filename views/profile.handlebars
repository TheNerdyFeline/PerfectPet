<div class="card">
    {{#each userPets}}
    <div class="card-tabs">
	<ul class="tabs tabs-fixed-width">
	    <li class="tab"><a href="{{this.petame}}">{{this.petname}}</a></li>
	</ul>
    </div> <!-- close card tabs -->
    {{#each this.userPets}}
    <div id="{{this.petname}}" class="col s12">
	<div class="card horizontal">
	    <div class="card-image">
		<img src="{{this.image}}" id="{{this.petname}}" alt="{{this.petname}}">
		<span class="card-title">{{this.petname}}</span>
	    </div>
	    <div class="card-stacked">
		<div class="card-content">
		    <div class="about">
			<p>{{this.about}}</p>
		    </div>
		    <table>
			<thead>
			    <tr>
				<th>Birthday</th>
				<th>Gender</th>
				<th>Species</th>
				<th>Breed</th>
			    </tr>
			</thead>

			<tbody>
			    <tr>
				<td>{{this.birthday}}</td>
				<td>{{this.gender}}</td>
				<td>{{this.species}}</td>
				<td>{{this.breed}}</td>
			    </tr>
			</tbody>
		    </table>
		</div>	<!-- content -->	
	    </div>  <!-- stacked -->
	</div> <!-- horizontal -->
    </div> <!-- pet div -->
    {{/each}}
</div> <!-- card -->


